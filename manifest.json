{
  "manifest_version": 3,
  "name": "CarfaxShara Extension",
  "description": "Extension for car VIN reports and statistics",
  "version": "1.0.0",
  "permissions": [
    "scripting",
    "cookies",
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.iaai.com/*",
        "https://www.copart.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://carfaxshara.com/*",
    "https://www.iaai.com/*",
    "https://www.copart.com/*"
  ]
}